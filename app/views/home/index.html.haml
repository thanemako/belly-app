#movies.page(data-role="page" data-theme="x" data-title="Top 10: Movies")
	#main
		%header
			.content
				%h1
					Top 10:
					%span.type Movies
		#main-content
			.content.clearfix
				%nav.movies-nav
					%a.movies-link.col-50(href="#movies")
						Movies
					%a.albums-link.col-50.col-last(href="#albums")
						Albums
				%section#movies-list
					/ JSON drops movie listing here
		%footer
			.content
				%p= ['Copyright Thane Woidan', Time.now.year, 'for Belly'].join " "

